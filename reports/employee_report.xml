<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_tasks_report" model="ir.actions.report">
            <field name="name">Employee Tasks Report</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">employee_operations.employee_task_report_template</field>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Employee Tasks - %s' % (object.name)</field>
        </record>

        <template id="employee_task_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="employee">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Employee Task Report: <span t-field="employee.name"/></h2>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Total Tasks</th>
                                        <th>Completed Tasks</th>
                                        <th>Late Tasks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <t t-esc="len(employee.task_ids)"/>
                                        </td>
                                        <td>
                                            <t t-esc="len(employee.task_ids.filtered(lambda t: t.state == 'done'))"/>
                                        </td>
                                        <td>
                                            <t t-esc="len(employee.task_ids.filtered(lambda t: t.is_late))"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>