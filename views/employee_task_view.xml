<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_task_view_list" model="ir.ui.view">
            <field name="name">employee task list</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <list decoration-primary="state == 'draft'" decoration-info="state == 'in_progress'" decoration-success="state == 'done'" decoration-danger="state == 'canceled'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="deadline"/>
                </list>
            </field>
        </record>

        <record id="employee_task_view_form" model="ir.ui.view">
            <field name="name">employee task form</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_in_progress" type="object" class="btn-secondary" string="Start Task" invisible="state != 'draft'"/>
                        <button name="action_done" type="object" class="btn-success" string="Mark as Done" invisible="state != 'in_progress'"/>
                        <button name="action_canceled" type="object" class="btn-danger" string="Cancel" invisible="state != 'in_progress'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft, in_progress, done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Late" bg_color="text-bg-danger" invisible="not is_late"/>
                        <group>
                            <div class="o_row">
                                <label for="name"/>
                                <field name="name" readonly="state in ('canceled', 'done')"/>
                                <label for="employee_id"/>
                                <field name="employee_id" readonly="state in ('canceled', 'done')"/>
                            </div>
                        </group>
                        <group>
                            <group string="General Info">
                                <field name="priority" readonly="state in ('canceled', 'done')"/>
                                <field name="task_type" readonly="state in ('canceled', 'done')"/>
                                <field name="deadline" readonly="state in ('canceled', 'done')"/>
                            </group>
                            <group string="Additional Info">
                                <field name="estimated_hours" readonly="state in ('canceled', 'done')"/>
                                <field name="actual_hours" readonly="state in ('canceled', 'done')"/>
                                <field name="progress" widget="progressbar"/>
                                <field name="parent_task_id" invisible="not parent_task_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_id" readonly="state in ('canceled', 'done')"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" readonly="state in ('canceled', 'done')"/>
                            </page>
                            <page string="Subtasks" invisible="parent_task_id">
                                <field name="child_task_ids" readonly="state in ('canceled', 'done')"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </form>
            </field>
        </record>

        <record id="employee_task_view_kanban" model="ir.ui.view">
            <field name="name">employee task kanban</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="priority"/>
                    <field name="progress"/>
                    <field name="is_late"/>
                    <templates>
                        <t t-name="card">
                            <div t-if="record.is_late.raw_value" class="badge bg-danger" style="position: absolute; top: 8px; right: 8px;">
                                Late
                            </div>
                            <h4>
                                <field name="name"/>
                            </h4>
                            <div>
                                <field name="employee_id"/>
                            </div>
                            <div>
                                Priority:
                                <field name="priority"/>
                            </div>
                            <div class="d-flex gap-3">
                                Progress:
                                <field name="progress" widget="progressbar"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="employee_task_view_search" model="ir.ui.view">
            <field name="name">employee.task.search</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    <filter name="group_task_type" string="Task Type" context="{'group_by': 'task_type'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                </search>
            </field>
        </record>

        <record id="employee_task_view_pivot" model="ir.ui.view">
            <field name="name">employee task pivot</field>
            <field name="model">employee.task</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="estimated_hours" type="measure"/>
                    <field name="actual_hours" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="daily_scheduled_job_cron" model="ir.cron">
            <field name="name">Daily scheduled job</field>
            <field name="model_id" ref="model_employee_task"/>
            <field name="state">code</field>
            <field name="code">model.daily_scheduled_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="monthly_scheduled_job_cron" model="ir.cron">
            <field name="name">Monthly scheduled job</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.monthly_scheduled_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="active">True</field>
        </record>

        <record id="employee_task_action" model="ir.actions.act_window">
            <field name="name">Employee Task</field>
            <field name="res_model">employee.task</field>
            <field name="view_mode">list,form,kanban,pivot</field>
        </record>
    </data>
</odoo>